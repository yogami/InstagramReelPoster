# Server
PORT=3000
NODE_ENV=development

# OpenRouter (Primary - Image Generation)
OPENROUTER_API_KEY=your-openrouter-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=black-forest-labs/FLUX.1-schnell-Free

# Pixabay (Free Image Fallback)
PIXABAY_API_KEY=your-pixabay-api-key

# OpenAI (Transcription, LLM, Subtitles, Images Fallback)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4.1

# Telegram Integration (for receiving voice notes)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_SECRET=your-random-secret-min-32-chars

# Make.com Integration (for callbacks on job completion)
MAKE_WEBHOOK_URL=https://hook.eu1.make.com/your-webhook-id

# Fish Audio TTS
FISH_AUDIO_API_KEY=your-fish-audio-api-key
FISH_AUDIO_BASE_URL=https://api.fish.audio
FISH_AUDIO_VOICE_ID=your-yami-voice-id

# Music Catalog (optional external API)
MUSIC_CATALOG_API_KEY=
MUSIC_CATALOG_BASE_URL=

# Internal Music Catalog
INTERNAL_MUSIC_CATALOG_PATH=./data/internal_music_catalog.json

# Kie.ai (Suno fallback for AI music generation)
KIE_API_KEY=your-kie-api-key
KIE_API_BASE_URL=https://api.kie.ai/suno
KIE_API_VIDEO_BASE_URL=https://api.kie.ai/api/v1
KIE_VIDEO_MODEL=KLING_V2_5_TURBO

# Shotstack (Video Rendering)
SHOTSTACK_API_KEY=your-shotstack-api-key
SHOTSTACK_BASE_URL=https://api.shotstack.io/v1

# Cloudinary (File Storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Video Renderer Selection (ffmpeg or shotstack)
VIDEO_RENDERER=ffmpeg

# Reel constraints
MIN_REEL_SECONDS=10
MAX_REEL_SECONDS=90

# Speaking rate (words per second)
SPEAKING_RATE_WPS=1.8

# ====================================
# Personal Clone Feature (Optional)
# ====================================
# Enable local AI models for voice cloning and personality mimicking.
# All default to false - existing behavior unchanged.

# Feature Flags
USE_PERSONAL_CLONE_TTS=false      # Use local XTTS v2 instead of Fish Audio
USE_PERSONAL_CLONE_LLM=false      # Use local LLM (Ollama) instead of OpenAI  
PERSONAL_CLONE_TRAINING_MODE=false # Collect training data during processing

# Local Server URLs (only needed when feature flags are enabled)
XTTS_SERVER_URL=http://localhost:8020
LOCAL_LLM_URL=http://localhost:11434

# Training Data Storage
PERSONAL_CLONE_DATA_PATH=./data/personal_clone

# Personal Twin Personality (Generic/Reusable)
PERSONAL_CLONE_SYSTEM_PROMPT="You are a helpful and intelligent personal AI twin. Write in a natural, conversational tone that reflects the user's generic voice across all social media platforms."
